<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AnimeMovieApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/anime_blue_900</item>
        <item name="colorPrimaryVariant">@color/anime_blue_700</item>
        <item name="colorOnPrimary">@color/anime_blue_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/anime_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/anime_blue_900</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/anime_blue_900</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/anime_white</item>
        <item name="android:textColor">@color/anime_white</item>

    </style>

    <style name="Theme.AnimeMovieApp" parent="Base.Theme.AnimeMovieApp">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="Theme.AnimeMovieApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AnimeMovieApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.AnimeMovieApp.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/anime_white</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Base.Theme.AnimeMovieApp">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/anime_white</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/anime_white</item>

        <item name="android:textColorHint">@color/white_grey</item>
    </style>


</resources>