                <!--                    android:text="Minggu"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:textSize="10sp"-->
                <!--                    app:layout_constraintEnd_toEndOf="@+id/ivSeninCalender"-->
                <!--                    app:layout_constraintStart_toStartOf="@+id/ivSeninCalender"-->
                <!--                    app:layout_constraintTop_toBottomOf="@id/ivSeninCalender" />-->

                <!--                <androidx.recyclerview.widget.RecyclerView-->
